@model Shared.Models.LogMessage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>LogMessage</h4>
<hr />

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Application" class="control-label"></label>
                <input asp-for="Application" class="form-control"/>
                <span asp-validation-for="Application" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control"/>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group mb-3">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end gap-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </div>
    </div>
